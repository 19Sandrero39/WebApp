@model Domain.Entities.Product

@{
    ViewData["Title"] = "Удаление продукта";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="card-title mb-4">Удаление продукта</h1>
                    <h3 class="mb-4">Вы уверены, что хотите удалить <span class="text-danger">@Model.Name</span>?</h3>

                    <form asp-action="Delete" method="post" class="mb-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger w-100">Удалить</button>
                    </form>

                    <a asp-action="Index" class="btn btn-secondary w-100">Отмена</a>
                </div>
            </div>
        </div>
    </div>
</div>