@model Domain.Entities.Product

@{
    ViewData["Title"] = "Редактирование продукта";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-dark text-white py-3">
                    <h1 class="mb-0 text-center">Редактирование продукта</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label fw-bold">Название</label>
                                <input type="text" asp-for="Name" class="form-control border-0 shadow-sm mb-2"
                                       required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-bold">Цена</label>
                                <input type="number" step="0.01" asp-for="Price" class="form-control border-0 shadow-sm mb-2"
                                       required>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Brand" class="form-label fw-bold">Бренд</label>
                                <input type="text" asp-for="Brand" class="form-control border-0 shadow-sm mb-2">
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="QuantityInStock" class="form-label fw-bold">Количество</label>
                                <input type="number" step="1" asp-for="QuantityInStock" class="form-control border-0 shadow-sm mb-2">
                                <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label asp-for="Description" class="form-label fw-bold">Описание</label>
                                <textarea asp-for="Description" class="form-control border-0 shadow-sm mb-2" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Image" class="form-label fw-bold">Изображение</label>
                                <input type="text" asp-for="Image" class="form-control border-0 shadow-sm mb-2">
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <button type="submit" class="btn btn-outline-dark w-100 rounded-3">
                                    <i class="bi bi-save me-2"></i> Сохранить
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-2"></i> Отмена</a>
                </div>
            </div>
        </div>
    </div>
</div>