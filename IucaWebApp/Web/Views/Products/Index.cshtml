@model IEnumerable<Domain.Entities.Product>

@{
    ViewData["Title"] = "Список продуктов";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-dark text-white py-3">
                    <h1 class="mb-0">Список продуктов</h1>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Название</th>
                                    <th scope="col">Цена</th>
                                    <th scope="col">Бренд</th>
                                    <th scope="col">Количество</th>
                                    <th scope="col">Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>@product.Price</td>
                                        <td>@product.Brand</td>
                                        <td>@product.QuantityInStock</td>
                                        <td class="d-flex gap-2">
                                            <a asp-action="Edit" asp-route-id="@product.Id"
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil-fill"></i> Редактировать
                                            </a>
                                            <a asp-action="Details" asp-route-id="@product.Id"
                                               class="btn btn-sm btn-secondary">
                                                <i class="bi bi-info-circle-fill"></i> Подробнее
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@product.Id"
                                               class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash-fill"></i> Удалить
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-center py-3">
                    <a asp-action="Create" class="btn btn-lg btn-success">
                        <i class="bi bi-plus-circle-fill"></i> Добавить новый продукт
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>