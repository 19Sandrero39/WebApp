@model Domain.Entities.Basket

@{
    ViewData["Title"] = "Удалить корзину";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-danger text-white py-3">
                    <h1 class="mb-0">Удалить корзину</h1>
                </div>
                <div class="card-body text-center p-4">
                    <i class="bi bi-exclamation-triangle-fill text-danger mb-3" style="font-size: 3rem;"></i>
                    <h2 class="card-title mb-3">Вы уверены, что хотите удалить эту корзину?</h2>
                    <p class="card-text">
                        Вы удаляете корзину с ID: <strong>@Model.Id</strong>. <br />
                        Статус корзины: <strong>@Model.Status</strong>.
                    </p>

                    @if (Model.BasketProducts != null && Model.BasketProducts.Any())
                    {
                        <div class="mt-3">
                            <p class="card-text"><strong>Продукты в корзине:</strong></p>
                            <ul class="list-unstyled">
                                @foreach (var basketProduct in Model.BasketProducts)
                                {
                                    <li>
                                        @basketProduct.Product.Name (Кол-во: @basketProduct.Quantity)
                                    </li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                            <i class="bi bi-trash-fill me-2"></i> Удалить корзину
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm ms-2">
                            <i class="bi bi-x-circle-fill me-2"></i> Отмена
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">